{
    "name": "mawuekom/laravel-repository-layer",
    "description": "Repository Pattern implementation for Laravel",
    "keywords": [
        "mawuekom",
        "laravel-repository-layer"
    ],
    "homepage": "https://github.com/mawuekom/laravel-repository-layer",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ephra√Øm Seddor",
            "email": "seddorephraim7@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Mawuekom\\LaravelRepositoryLayer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mawuekom\\LaravelRepositoryLayer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mawuekom\\LaravelRepositoryLayer\\LaravelRepositoryLayerServiceProvider"
            ],
            "aliases": {
                "LaravelRepositoryLayer": "Mawuekom\\LaravelRepositoryLayer\\LaravelRepositoryLayerFacade"
            }
        }
    }
}
